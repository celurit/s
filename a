const ffmpeg = require('fluent-ffmpeg')
const Installerffmpeg = require('@ffmpeg-installer/ffmpeg')
const Installerffprobe = require('@ffprobe-installer/ffprobe')
ffmpeg.setFfmpegPath(Installerffmpeg.path)
ffmpeg.setFfprobePath(Installerffprobe.path)
const fs = require('fs')
const youtubedl = require('youtube-dl')
const request =  require('request')
const progress = require('request-progress')
const md5 = require('md5')
const path = require('path')
const low = require('lowdb')
const FileSync = require('lowdb/adapters/FileSync')
const adapter = new FileSync('db.json')
const db = low(adapter)
const express = require('express')
const app = express()
const cors = require('cors')
const CronJob = require('cron').CronJob;
db.defaults({ file: [] })
  .write();

const job = new CronJob('*/20 * * * * *', function() { // dua menit

  download('1lz0OUcEQUGHXFBdxsr17RyZaqbqauxnQ')

});

job.start();

app.get('/f/:id', function (req, res) {

  console.log(req.params.id);
  
  var f = db.get('file')
    .filter({ id: req.params.id})
    .value()

  if(f.length == 0) { // tambah

    db.get('file')
      .push({ 
        id: req.params.id, 
        download: 'tunggu', 
        encoding: 'tunggu'
      })
      .write()

    res.send('tambah')

  } else {

    res.send(f[0])

  }

})

app.use('/videos', express.static('videos'));

app.listen(3002);

function download(id) {
  
  var file = 'videos/'+id

  if (!fs.existsSync(file)) {
    progress(request('https://www.googleapis.com/drive/v3/files/'+id+'?alt=media&key=AIzaSyDaiRmFxm-sC_OSbtv_CfSzlOclQCfuKdM'), {
    })
    .on('progress', function (state) {   
      console.log('progress', state);
    })
    .on('error', function (err) {
      console.log(err);
    })
    .on('end', function () {
      console.log('selesai')
    })
    .pipe(fs.createWriteStream(file));
  } else {
    console.log('sudah di download')
  }
}
